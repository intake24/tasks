{
  "name": "intake24-tasks",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "description": "Intake24 Tasks Service",
  "author": "MRC Epidemiology Unit, University of Cambridge",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRC-Epid-it24/tasks.git"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build-only": "tsdown",
    "build": "pnpm run typecheck && pnpm run build-only",
    "start": "node dist/index.mjs",
    "dev": "tsdown --watch --onSuccess \"pnpm run dev:start\"",
    "dev:start": "concurrently -c blue,red --names SVC,TS \"node --trace-warnings --inspect=5959 ./dist/index.mjs\" \"pnpm run typecheck\"",
    "cli": "node dist/cli.mjs",
    "cli:dev": "unrun ./src/cli.ts",
    "lint": "eslint . --fix",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@json2csv/formatters": "^7.0.6",
    "@json2csv/node": "^7.0.6",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "execa": "^9.6.1",
    "fast-csv": "^5.0.5",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.3",
    "json5": "^2.2.3",
    "lodash-es": "^4.17.22",
    "ms": "^2.1.3",
    "mssql": "^12.2.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "pg-promise": "^12.3.0",
    "ssh2-sftp-client": "^12.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.0",
    "@tsconfig/node24": "^24.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/ms": "^2.1.0",
    "@types/mssql": "^9.1.8",
    "@types/node": "^24.10.8",
    "@types/node-schedule": "^2.1.8",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@typescript/native-preview": "^7.0.0-dev.20260112.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "unrun": "^0.2.24"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
